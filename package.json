{
  "name": "action-release",
  "version": "0.0.1",
  "private": true,
  "description": "GitHub Action for creating a release on Sentry",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getsentry/action-release.git"
  },
  "keywords": [
    "actions",
    "sentry",
    "release"
  ],
  "author": "Sentry",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@sentry/cli": "^1.54.0",
    "@sentry/types": "^5.17.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/parser": "^3.3.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.2.0",
    "eslint-plugin-github": "^4.0.1",
    "eslint-plugin-jest": "^23.13.2",
    "jest": "^26.0.1",
    "jest-circus": "^26.0.1",
    "js-yaml": "^3.14.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  }
}
