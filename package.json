{
  "name": "action-release",
  "version": "1.10.0",
  "private": true,
  "description": "GitHub Action for creating a release on Sentry",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "ncc build src/main.ts -e @sentry/cli",
    "format": "prettier --write **/*.ts **/*.md",
    "format-check": "prettier --check **/*.ts **/*.md",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "all": "yarn run format && yarn run lint && yarn run build && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getsentry/action-release.git"
  },
  "keywords": [
    "actions",
    "sentry",
    "release"
  ],
  "author": "Sentry",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@sentry/node": "^8.54.0"
  },
  "devDependencies": {
    "@sentry/cli": "^2.41.1",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@typescript-eslint/parser": "^6.9.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.52.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.4.3",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "volta": {
    "node": "18.17.0",
    "yarn": "1.22.4"
  }
}
